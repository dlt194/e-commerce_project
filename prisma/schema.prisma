generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  CUSTOMER
  ADMIN
}

enum ProductStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum CartStatus {
  ACTIVE
  CONVERTED
  ABANDONED
}

enum OrderStatus {
  PENDING
  PAID
  FULFILLED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  AUTHORIZED
  CAPTURED
  FAILED
  REFUNDED
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  MANUAL
}

enum FulfillmentStatus {
  UNFULFILLED
  PARTIALLY_FULFILLED
  FULFILLED
}

enum ShipmentStatus {
  PREPARING
  SHIPPED
  DELIVERED
  RETURNED
}

enum ServicePackageStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum ServiceOrderStatus {
  PENDING
  PAID
  DELIVERED
  CANCELLED
}

enum ServicePaymentStatus {
  PENDING
  PAID
  FAILED
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  passwordHash  String
  firstName     String?
  lastName      String?
  role          UserRole    @default(CUSTOMER)
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  addresses     Address[]
  carts         Cart[]
  orders        Order[]
  reviews       Review[]
  sessions      Session[]
  serviceCart   ServiceCart?
  serviceOrders ServiceOrder[]
}

model ServicePackage {
  id                String               @id @default(cuid())
  name              String
  slug              String               @unique
  summary           String?
  priceCents        Int?
  priceCurrency     String               @default("GBP")
  isCustomQuote     Boolean              @default(false)
  maxPages          Int?
  includesBackend   Boolean              @default(false)
  includesDatabase  Boolean              @default(false)
  includesHosting   Boolean              @default(false)
  includesAdminPanel Boolean             @default(false)
  requiresKickoffCall Boolean            @default(true)
  status            ServicePackageStatus @default(DRAFT)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
  serviceCartItems  ServiceCartItem[]
  serviceOrderItems ServiceOrderItem[]

  @@index([status])
}

model ServiceCart {
  id         String            @id @default(cuid())
  userId     String            @unique
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  items      ServiceCartItem[]
}

model ServiceCartItem {
  id               String         @id @default(cuid())
  serviceCartId    String
  servicePackageId String
  quantity         Int            @default(1)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  serviceCart      ServiceCart    @relation(fields: [serviceCartId], references: [id], onDelete: Cascade)
  servicePackage   ServicePackage @relation(fields: [servicePackageId], references: [id], onDelete: Restrict)

  @@unique([serviceCartId, servicePackageId])
  @@index([servicePackageId])
}

model ServiceOrder {
  id                     String             @id @default(cuid())
  userId                 String
  status                 ServiceOrderStatus @default(PENDING)
  currency               String             @default("GBP")
  subtotalCents          Int
  totalCents             Int
  requiresKickoffCall    Boolean            @default(true)
  kickoffCallConfirmed   Boolean            @default(false)
  kickoffCallConfirmedAt DateTime?
  deliveredAt            DateTime?
  supportExpiresAt       DateTime?
  isArchived             Boolean            @default(false)
  archivedAt             DateTime?
  stripeCheckoutSessionId String?           @unique
  stripePaymentIntentId  String?
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  user                   User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  items                  ServiceOrderItem[]
  payment                ServicePayment?

  @@index([userId, createdAt])
  @@index([status])
}

model ServiceOrderItem {
  id                String          @id @default(cuid())
  serviceOrderId    String
  servicePackageId  String?
  serviceName       String
  quantity          Int
  unitPriceCents    Int
  totalPriceCents   Int
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  serviceOrder      ServiceOrder    @relation(fields: [serviceOrderId], references: [id], onDelete: Cascade)
  servicePackage    ServicePackage? @relation(fields: [servicePackageId], references: [id], onDelete: SetNull)

  @@index([serviceOrderId])
  @@index([servicePackageId])
}

model ServicePayment {
  id             String               @id @default(cuid())
  serviceOrderId String               @unique
  providerRef    String?
  status         ServicePaymentStatus @default(PENDING)
  amountCents    Int
  currency       String               @default("GBP")
  paidAt         DateTime?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  serviceOrder   ServiceOrder         @relation(fields: [serviceOrderId], references: [id], onDelete: Cascade)

  @@index([status])
}

model SiteSetting {
  id              String   @id @default(cuid())
  acceptingOrders Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Category {
  id            String      @id @default(cuid())
  name          String
  slug          String      @unique
  description   String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  products      Product[]
}

model Product {
  id            String         @id @default(cuid())
  name          String
  slug          String         @unique
  description   String?
  status        ProductStatus  @default(DRAFT)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  categories    Category[]
  variants      ProductVariant[]
  reviews       Review[]

  @@index([status])
}

model ProductVariant {
  id            String      @id @default(cuid())
  productId     String
  sku           String      @unique
  title         String
  priceCents    Int
  compareAtCents Int?
  currency      String      @default("USD")
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  product       Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  inventory     Inventory?
  cartItems     CartItem[]
  orderItems    OrderItem[]

  @@index([productId, isActive])
}

model Inventory {
  id            String          @id @default(cuid())
  variantId     String          @unique
  quantity      Int             @default(0)
  reserved      Int             @default(0)
  updatedAt     DateTime        @updatedAt
  variant       ProductVariant  @relation(fields: [variantId], references: [id], onDelete: Cascade)
}

model Cart {
  id            String      @id @default(cuid())
  userId        String?
  status        CartStatus  @default(ACTIVE)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  items         CartItem[]

  @@index([userId, status])
}

model CartItem {
  id            String          @id @default(cuid())
  cartId        String
  variantId     String
  quantity      Int             @default(1)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  cart          Cart            @relation(fields: [cartId], references: [id], onDelete: Cascade)
  variant       ProductVariant  @relation(fields: [variantId], references: [id], onDelete: Restrict)

  @@unique([cartId, variantId])
  @@index([variantId])
}

model Address {
  id            String      @id @default(cuid())
  userId        String
  label         String?
  fullName      String
  line1         String
  line2         String?
  city          String
  state         String?
  postalCode    String
  country       String      @default("US")
  phone         String?
  isDefault     Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  billingOrders Order[]     @relation("BillingAddress")
  shippingOrders Order[]    @relation("ShippingAddress")

  @@index([userId, isDefault])
}

model Order {
  id                  String             @id @default(cuid())
  orderNumber         String             @unique
  userId              String?
  status              OrderStatus        @default(PENDING)
  fulfillmentStatus   FulfillmentStatus  @default(UNFULFILLED)
  currency            String             @default("USD")
  subtotalCents       Int
  discountCents       Int                @default(0)
  shippingCents       Int                @default(0)
  taxCents            Int                @default(0)
  totalCents          Int
  notes               String?
  billingAddressId    String?
  shippingAddressId   String?
  placedAt            DateTime?
  requiresKickoffCall Boolean            @default(true)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  user                User?              @relation(fields: [userId], references: [id], onDelete: SetNull)
  billingAddress      Address?           @relation("BillingAddress", fields: [billingAddressId], references: [id], onDelete: SetNull)
  shippingAddress     Address?           @relation("ShippingAddress", fields: [shippingAddressId], references: [id], onDelete: SetNull)
  items               OrderItem[]
  payments            Payment[]
  shipments           Shipment[]

  @@index([userId, createdAt])
  @@index([status, fulfillmentStatus])
}

model Session {
  id         String   @id @default(cuid())
  userId     String
  token      String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, expiresAt])
}

model OrderItem {
  id                  String          @id @default(cuid())
  orderId             String
  variantId           String
  sku                 String
  productName         String
  variantTitle        String
  quantity            Int
  unitPriceCents      Int
  totalPriceCents     Int
  order               Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variant             ProductVariant  @relation(fields: [variantId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([variantId])
}

model Payment {
  id                  String           @id @default(cuid())
  orderId             String
  provider            PaymentProvider
  providerRef         String?
  status              PaymentStatus    @default(PENDING)
  amountCents         Int
  currency            String           @default("USD")
  paidAt              DateTime?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  order               Order            @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId, status])
  @@unique([provider, providerRef])
}

model Shipment {
  id                  String          @id @default(cuid())
  orderId             String
  carrier             String?
  trackingNumber      String?
  status              ShipmentStatus  @default(PREPARING)
  shippedAt           DateTime?
  deliveredAt         DateTime?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  order               Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId, status])
}

model Review {
  id                  String      @id @default(cuid())
  userId              String
  productId           String
  rating              Int
  title               String?
  body                String?
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  user                User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  product             Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([productId, rating])
}
